  "scripts": {
    "dev:serve": "NODE_ENV=development nodemon server/server.js",
    "predev:watch": "npm run lint && npm run test-all:dev",
    "dev:watch": "NODE_ENV=development nodemon",
    "prestart": "NODE_ENV=development npm run build",
    "start": "npm run dev:serve",
    "poststart": "npm run test-all:dev",
    "start-production": "NODE_ENV=production pm2 start server/server.js",
    "build": "next build",
    "build-and-start": "next build && npm run start-production",
    "lint": "eslint .",
    "test": "npm run test-all",
    "test-all": "NODE_ENV=production npm run lint && npm run server-unit-tests && npm run server-integration-tests",
    "test-all:dev": "NODE_ENV=development npm run lint && npm run server-unit-tests:dev && npm run server-integration-tests",
    "server-unit-tests": "mocha './server/**/*.test.js'",
    "server-unit-tests:dev": "NODE_ENV=development mocha './server/**/*.test.js'",
    "server-integration-tests": "mocha ./server/**/*.integration.js"
  },
